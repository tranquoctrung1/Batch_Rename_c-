<Window x:Class="Batch_Rename.FullnameNormalizeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Batch_Rename"
        mc:Ignorable="d"
        Title="FullnameNormalizeDialog" Height="350.176" Width="332.57" WindowStartupLocation="CenterScreen">
    <Canvas >
        <Label Canvas.Left="37" Canvas.Top="43" FontSize="17" FontWeight="Bold">FULLNAME MORMALIZE ACTION</Label>
        <Label Canvas.Left="72" Canvas.Top="75" FontSize="15">Please tick into circles here</Label>
        <RadioButton Name="NoneSpace" Canvas.Left="36" Canvas.Top="141" >None Space in the start and in the end</RadioButton>
        <RadioButton Name="Standard" Canvas.Left="36" Canvas.Top="184" >Standard</RadioButton>
        <RadioButton Name="OneSpace" Canvas.Left="36" Canvas.Top="222" >Only one space between charaters</RadioButton>
        <Button Name="SaveButton" Width="100" Height="32" Canvas.Left="37" Canvas.Top="274" Click="SaveButton_Click" RenderTransformOrigin="0.519,-0.026">Save</Button>
        <Button Name="CancelButton" Width="100" Height="32" Canvas.Left="180" Canvas.Top="274" IsCancel="True">Cancel</Button>

    </Canvas>
</Window>
